<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pendamping.DetailPasienPendampingActivity"
    android:padding="30dp"
    android:background="@color/teal_700">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_nik_header"
                        android:text="NIK"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_nik_content"
                        android:text="NIK"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_no_rm_header"
                        android:text="Nomor Rekam Medis"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold" />
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_no_rm_content"
                        android:text="Nomor Rekam Medis"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_no_reg_nas_header"
                        android:text="Nomor Reg. Nasional"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_no_reg_nas_content"
                        android:text="Nomor Reg. Nasional"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_no_bpjs_header"
                        android:text="Nomor BPJS"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_no_bpjs_content"
                        android:text="Nomor BPJS"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_nama_header"
                        android:text="Nama"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_nama_content"
                        android:text="Nama"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_tgl_lahir_header"
                        android:text="Tanggal Lahir"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_tgl_lahir_content"
                        android:text="Tanggal Lahir"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_tgl_kunjungan_header"
                        android:text="Tgl Kunjungan Rutin"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_tgl_kunjungan_content"
                        android:text="Tanggal Kunjungan"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_nomor_reg_nas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:text="Nomor Registrasi Nasional"/>

    <Button
        android:id="@+id/btn_tgl_kunjungan_rutin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_nomor_reg_nas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Tanggal Kunjungan Rutin"/>

    <Button
        android:id="@+id/btn_janji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_tgl_kunjungan_rutin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Lihat Janji Kunjungan"/>

    <Button
        android:id="@+id/btn_kunjungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_janji"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Kunjungan"/>

    <Button
        android:id="@+id/btn_laporan_kunjungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_kunjungan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Rekapitulasi Kunjungan"/>

    <Button
        android:id="@+id/btn_Jadwal_obat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_laporan_kunjungan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Jadwal Minum Obat"/>

    <Button
        android:id="@+id/btn_laporan_minum_obat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_Jadwal_obat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Rekapitulasi Minum Obat"/>

</androidx.constraintlayout.widget.ConstraintLayout>