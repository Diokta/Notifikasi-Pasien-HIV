<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.DetailPetugasActivity"
    android:padding="30dp"
    android:background="@color/teal_700">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_nik_header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK    :"
                android:layout_margin="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_nik_content"
                app:layout_constraintLeft_toRightOf="@id/tv_nik_header"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:layout_margin="10dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_nama_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nik_header"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_nama_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nik_header"
                app:layout_constraintLeft_toRightOf="@id/tv_nama_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_tgl_lahir_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_tgl_lahir_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_header"
                app:layout_constraintLeft_toRightOf="@id/tv_tgl_lahir_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_email_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tgl_lahir_content"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_email_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_tgl_lahir_content"
                app:layout_constraintLeft_toRightOf="@id/tv_email_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_telepon_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email_header"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_telepon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_email_header"
                app:layout_constraintLeft_toRightOf="@id/tv_telepon_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_jenis_kelamin_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_telepon_header"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_jenis_kelamin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_telepon_header"
                app:layout_constraintLeft_toRightOf="@id/tv_jenis_kelamin_header"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_bagian_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagian     :"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_jenis_kelamin_header"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_bagian_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagian"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_jenis_kelamin_header"
                app:layout_constraintLeft_toRightOf="@id/tv_bagian_header"
                android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_ubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_data"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_hapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ubah"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>