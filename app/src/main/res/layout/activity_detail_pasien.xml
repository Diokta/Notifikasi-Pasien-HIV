<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:background="@color/teal_700"
        tools:context=".admin.DetailPasienActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_data"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_nik_header"
                            android:text="NIK"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_nik_content"
                            android:text="NIK"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_no_rm_header"
                            android:text="No. Rekam Medis"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold" />
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                        android:id="@+id/tv_no_rm_content"
                        android:text="No. Rekam Medis "
                            android:layout_width="0dp"
                            android:layout_weight="10"
                        android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_no_reg_nas_header"
                            android:text="No. Reg. Nasional"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_no_reg_nas_content"
                            android:text="No. Reg. Nasional"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_no_bpjs_header"
                            android:text="Nomor BPJS "
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_no_bpjs_content"
                            android:text="Nomor BPJS"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_nama_header"
                            android:text="Nama"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_nama_content"
                            android:text="Nama"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_tgl_lahir_header"
                            android:text="Tanggal Lahir"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_tgl_lahir_content"
                            android:text="Tanggal Lahir"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_email_header"
                            android:text="Email"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold" />
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_email_content"
                            android:text="Email"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_telepon_header"
                            android:text="Telepon"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_telepon_content"
                            android:text="Telepon"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_jenis_kelamin_header"
                            android:text="Jenis Kelamin"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_jenis_kelamin_content"
                            android:text="Jenis Kelamin"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_tgl_daftar_header"
                            android:text="Tanggal Daftar"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_tgl_daftar_content"
                            android:text="Tanggal Daftar"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_no_regis_header"
                            android:text="Nomor Registrasi"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=":"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_no_regis_content"
                            android:text="Nomor Registrasi"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_setuju_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setujui Pendaftaran"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>